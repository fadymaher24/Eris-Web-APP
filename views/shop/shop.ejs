<% if (prods.length>0){ %>
  <div class="content">
       <% for (let product of prods) { %>
        <section>
          <h2 id="section-head" style="width: 100%;">Merch</h2>
          <div class="shop-item">
            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
            <h3 id="item-data" style="font-weight: lighter;"><%= product.title %></h3>
            <h3 id="item-data"><%= product.price %> EGP</h3>
          </div>
          <% } %>
        </section>
        
      </div>
      <% } else { %>
        <h1 id="no-items">No items to show</h1>
        <% } %>
        <%- include('../includes/footer.ejs') %>
                
        <script src='../HeadFoot.js'></script>